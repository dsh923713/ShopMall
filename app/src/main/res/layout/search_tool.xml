<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/index_title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/blue"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:padding="5dp">
    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:drawablePadding="2dp"
        android:drawableTop="@mipmap/ic_location"
        android:text="北京"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_news"
        android:layout_toRightOf="@+id/tv_city"
        android:background="@drawable/shape_edit_corners_bg"
        android:drawableLeft="@mipmap/ic_search"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/ic_voice"
        android:gravity="center_vertical"
        android:hint="@string/goods_name"
        android:imeOptions="actionSearch"
        android:maxLength="10"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/gary"
        android:textColorHint="@color/gray_lite"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:drawablePadding="2dp"
        android:drawableTop="@mipmap/ic_news"
        android:text="@string/news"
        android:textColor="@color/white"
        android:textSize="10sp" />
</RelativeLayout>